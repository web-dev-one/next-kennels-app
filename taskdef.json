{
  
    "executionRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/<APP_NAME>--ecsTaskExecutionRole",
    "containerDefinitions": [
      {
        "name": "<APP_NAME>",
        "image": "<IMAGE_NAME>",
        "essential": true,
       
        "portMappings": [
          {
            "hostPort": <SERVICE_PORT>,
            "protocol": "TCP",
            "containerPort": <SERVICE_PORT>
          }
        ],
        "environment": [
          {
            "name": "NEXT_PUBLIC_publickey",
            "value": "${data.aws_secretsmanager_secret.emailjs_pub.arn}"
          },
          {
            "name": "NEXT_PUBLIC_userid",
            "value": "${data.aws_secretsmanager_secret.emailjs_user.arn}"
          },
          {
            "name": "NEXT_PUBLIC_templateid",
            "value": "${data.aws_secretsmanager_secret.emailjs_pub.arn}"
          }
        ]
      }
    ],
    "requiresCompatibilities": [
        "FARGATE" 
    ],
    "cpu": "<CPU>",
    "memory": "<MEMORY>",
    "networkMode": "awsvpc",
    "family": "<APP_NAME>"
  }